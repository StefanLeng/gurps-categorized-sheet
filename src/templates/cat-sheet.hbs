<form class="{{cssClass}}" autocomplete="off">
    {{#unless error}}
        <div id="cat-sheet-{{_ID}}" class="slcs-sheet">
            <div class="slcs-header">   
                {{>slcs-portrait}}
                {{>slcs-basic-attributes}}
                {{>slcs-secondary-attributes}}
                {{>slcs-hpfp}}
                {{>slcs-modifierlist}}
            </div>
            <nav class='slcs-sheet-tabs slcs-main-tabs' data-group='primary-tabs'>
                <li><a class='tab-item' data-tab='combat'>{{i18nFallback  'GURPS-cat-sheet.combatTab' 'Combat'}}</a></li>
                <li><a class='tab-item' data-tab='exploration'>{{i18nFallback  'GURPS-cat-sheet.explrationTab' 'Exploration & Stealth'}}</a></li>
                <li><a class='tab-item' data-tab='social'>{{i18nFallback  'GURPS-cat-sheet.socialTab' 'Social'}}</a></li>
                <li><a class='tab-item' data-tab='technical'>{{i18nFallback  'GURPS-cat-sheet.technicalTab' 'Technical & Reseach'}}</a></li>
                <li><a class='tab-item' data-tab='powers'>{{i18nFallback  'GURPS-cat-sheet.powersTab' 'Powers & Magic'}}</a></li>
                <li><a class='tab-item' data-tab='others'>{{i18nFallback  'GURPS-cat-sheet.othersTab' 'Others'}}</a></li>
                <li><a class='tab-item' data-tab='equipment'>{{i18nFallback  'GURPS-cat-sheet.equipmentTab' 'Equipment'}}</a></li>
                <li><a class='tab-item' data-tab='all'>{{i18nFallback  'GURPS-cat-sheet.all' 'All'}}</a></li>
                <li><a class='tab-item' data-tab='fav'>{{i18nFallback  'GURPS-cat-sheet.fav' 'Favs.'}}</a></li>
            </nav>
            <div class="slcs-main">
                <div class='tab' data-tab='combat' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-combat-tab'>
                        {{>slcs-conditions section='combat'}}
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-skills skills=categories.combat.skills}}
                            {{>slcs-advantages ads=categories.combat.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            <nav class='slcs-sheet-tabs slcs-combattabs' data-group='combat-tabs'>
                                <li><a class='tab-item' data-tab='melee'>{{i18nFallback  'GURPS-cat-sheet.meleeTab' 'Melee'}}</a></li>
                                <li><a class='tab-item' data-tab='ranged'>{{i18nFallback  'GURPS-cat-sheet.rangedTab' 'Ranged'}}</a></li>
                                <li><a class='tab-item' data-tab='defences'>{{i18nFallback  'GURPS-cat-sheet.defencesTab' 'Defences'}}</a></li>                            
                                <li><a class='tab-item' data-tab='criticals'>{{i18nFallback  'GURPS-cat-sheet.defencesTab' 'Criticals'}}</a></li>
                                {{#if (notEmpty system.additionalresources.tracker)}}                            
                                    <li><a class='tab-item' data-tab='resources'>{{i18nFallback  'GURPS-cat-sheet.resourcesTab' 'Resources'}}</a></li>
                                {{/if}}                       
                            </nav>
                            <div class="slcs-combatContent">
                                <div class='tab' data-tab='melee' data-group='combat-tabs'>
                                    <div class="col-tabcontent">                             
                                        {{>slcs-melee-weapons}}
                                        {{>slcs-target targets=targets}}
                                    </div>
                                </div>
                                <div class='tab' data-tab='ranged' data-group='combat-tabs'>
                                    <div class="col-tabcontent">                             
                                        {{>slcs-ranged-weapons}}
                                        {{>slcs-target targets=targetsRanged}}
                                    </div>
                                </div>
                                <div class='tab' data-tab='defences' data-group='combat-tabs'>
                                    <div class="col-tabcontent">                             
                                        {{>slcs-defences}}
                                    </div>
                                </div>
                                <div class='tab' data-tab='criticals' data-group='combat-tabs'>
                                    <div class="col-tabcontent">                             
                                        {{>slcs-criticalRolls}}
                                    </div>
                                </div>
                                <div class='tab' data-tab='resources' data-group='combat-tabs'>
                                    <div class="col-tabcontent">                             
                                        {{>slcs-trackers}}
                                    </div>
                                </div>                            </div>
                        </div>
                    </div>
                </div>
                <div class='tab' data-tab='exploration' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-exploration-tab'>
                        {{>slcs-conditions section='exploration'}}
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-skills skills=categories.exploration.skills}}
                            {{>slcs-advantages ads=categories.exploration.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            {{>slcs-sense-rolls}}
                            {{>slcs-otf-region OTFs=explorationOTFs type='exploration'}}
                            {{>slcs-lifting}}
                        </div>    
                    </div>                
                </div>
                <div class='tab' data-tab='social' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-social-tab'>
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-skills skills=categories.social.skills}}
                            {{>slcs-advantages ads=categories.social.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            {{>slcs-description}}
                            {{>slcs-otf-region OTFs=socialOTFs type='social'}}
                            {{>slcs-reactions}}
                        </div>    
                    </div>                
                </div>
                <div class='tab' data-tab='technical' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-technical-tab'>
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-skills skills=categories.technical.skills}}
                            {{>slcs-advantages ads=categories.technical.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            {{>slcs-otf-region OTFs=technicalOTFs type='technical'}}
                            {{>slcs-lifting}}
                        </div>    
                    </div>                
                </div>
                <div class='tab' data-tab='powers' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-powers-tab'>
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-skills skills=categories.powers.skills}}
                            {{>slcs-advantages ads=categories.powers.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            {{>slcs-otf-region OTFs=powersOTFs type='powers'}}
                            {{>slcs-spells}}
                        </div>    
                    </div>                   
                </div>
                <div class='tab' data-tab='others' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-others-tab'>
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-skills skills=categories.others.skills}}
                            {{>slcs-advantages ads=categories.others.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                             {{>slcs-qnotes}}
                        </div>    
                    </div>                    
                </div>
                <div class='tab' data-tab='equipment' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-equipment-tab'>
                        {{>slcs-equipment container='carried'}}
                        {{>slcs-equipment container='other'}}
                    </div>
                </div>
                <div class='tab' data-tab='all' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-all-tab'>
                        <div class ='slcs-col slcs-col1'>
                            {{>slcs-advantages ads=system.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            {{>slcs-skills skills=system.skills}}
                        </div>    
                    </div>   
                </div>                 
                <div class='tab' data-tab='fav' data-group='primary-tabs'>
                    <div class='slcs-tab-content slcs-fav-tab'>
                        <div class ='slcs-col slcs-col1'>
                            <div>Add traits or skills in the sheet configuration.</div>
                            {{>slcs-advantages ads=categories.favs.ads}}
                        </div>
                        <div class ='slcs-col slcs-col2'>
                            {{>slcs-skills skills=categories.favs.skills}}
                        </div>    
                    </div>                    
                </div>
            </div>
        </div>
    {{else}}
        <div>An uncepexted error occured when reading the character data. Please open an issue at https://github.com/StefanLeng/gurps-categorized-sheet/issues and attach an expoert of the character.</div>
    {{/unless}}
</form>
 