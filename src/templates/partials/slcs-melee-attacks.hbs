{{#if (notEmpty melee)}}
    <div class='slcs-melee-attacks gga-table with-notes slcs-block'>
        <div class='desc header'>{{localize  'GURPS.meleeWeapons'}}</div>
        <div class='usage header'>{{localize  'GURPS.usage'}}</div>
        <div class='level header'>{{localize  'GURPS.level'}}</div>
        <div class='damage header'>{{localize  'GURPS.damage'}}</div>
        <div class='reach header'>{{localize  'GURPS.reach'}}</div>

        {{#stripes melee 'even' 'odd' }}
            <div class='meleedraggable  {{stripeClass}}' data-key='system.melee.{{key}}'>
                <div class='desc dblclkedit indent{{indent}}'>
                    <div class='gga-desc-text'>{{{gurpslink name}}}</div>
                </div>
            </div>

            <div class='usage rollable flex-center  {{stripeClass}}' data-name='{{name}} ({{mode}})' data-key='system.melee.{{key}}'
                data-otf='{{quotedAttackName 'M' this}}'>{{mode}}</div>
            <div class='level rollable flex-center {{stripeClass}}' data-name='{{name}} ({{mode}})' data-key='system.melee.{{key}}'
                data-otf='{{quotedAttackName 'M' this}}'>{{level}}</div>
            <div class='damage rollable flex-center {{stripeClass}}' data-damage data-otf='{{damage}}'>{{damage}}</div>
            <div class='reach flex-center'>{{reach}}</div>
            {{#if (notEmpty notes)}}
                <div class='list_note {{stripeClass}}'>{{{gurpslink notes}}}</div>
            {{/if}}
        {{/stripes}}
    </div>
{{/if}}