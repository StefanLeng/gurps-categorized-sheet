<div class="slcs-secondary-attributes slcs-block">
    <div class='fieldblock'>
        <div class='field big rollable' data-path='attributes.WILL.value' data-otf='WILL'>{{system.attributes.WILL.value}}</div>
        <div class='label '>{{localize  'GURPS.attributesWILLNAME'}}</div>
        <div class='field big rollable' data-path='frightcheck' data-otf='Fright Check'>{{system.frightcheck}}</div>
        <div class='label'>{{localize  'GURPS.frightcheck'}}</div>
        <hr />
        <div class='field big rollable' data-path='attributes.PER.value' data-otf='PER'> {{system.attributes.PER.value}}</div>
        <div class='label'>{{localize  'GURPS.attributesPERNAME'}} ({{localize  'GURPS.attributesPER'}})</div>
        {{#if (ne (toNumber system.vision) (toNumber system.attributes.PER.value))}}
            <div class='field rollable' data-path='vision' data-otf='Vision'>{{system.vision}}</div>
            <div class='label'>{{localize  'GURPS.vision'}}</div>
        {{/if}}
        {{#if (ne (toNumber system.hearing) (toNumber system.attributes.PER.value))}}
            <div class='field rollable' data-path='hearing' data-otf='Hearing'>{{system.hearing}}</div>
            <div class='label'>{{localize  'GURPS.hearing'}}</div>
        {{/if}}
        {{#if (ne (toNumber system.tastesmell) (toNumber system.attributes.PER.value))}}
            <div class='field rollable' data-path='tastesmell' data-otf='Taste Smell' >{{system.tastesmell}} </div>
            <div class='label'>{{localize  'GURPS.tastesmell'}}</div>
        {{/if}}
        {{#if (ne (toNumber system.touch) (toNumber system.attributes.PER.value))}}
            <div class='field rollable' data-path='touch' data-otf='Touch'>{{system.touch}}</div>
            <div class='label'>{{localize  'GURPS.touch'}}</div>
        {{/if}}
    </div>
</div>