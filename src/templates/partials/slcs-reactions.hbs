{{#if (notEmpty system.reactions)}}
<div class='slcs-reactions gga-table slcs-block'>
  <div class='modifier header gga-right'>{{localize  'GURPS.modifier'}}</div>
  <div class='situation header'>{{localize  'GURPS.reaction'}}</div>

  {{#stripes system.reactions 'even' 'odd' }}
      <div class='modifier gmod gga-right {{stripeClass}}' data-name='Reaction {{situation}}' data-otf='{{displayNumber modifier}} {{situation}}'>
        {{{displayNumber modifier}}}
      </div>
      <div class='situation reactdraggable {{stripeClass}}' data-key='system.reactions.{{@key}}'>
        {{{gurpslink situation}}}
      </div>
  {{/stripes}}
</div>
{{/if}}
<div class='slcs-reactionroll slcs-block'>
  {{#if  reactionTableExists }}<button>Reaction Roll</button>{{else}}<div class="slsc-missing-table">No Reaction Roll Table found.</div>{{/if}}
  <div class="slcs-reactionOTFs slcs-otflist">
      {{{gurpslink reactionOTFs}}}
  </div>
</div>
